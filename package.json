{
  "name": "resume_transformer",
  "version": "3.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm --workspace @resume/web run start",
    "cli": "echo 'Legacy CLI removed'",
    "dev": "vercel dev",
    "build": "cd apps/web && npm install && npm run build",
    "postinstall": "npm --workspace @resume/ai-resume run build || true",
    "test": "jest",
    "ai:build": "npm --workspace @resume/ai-resume run build",
    "ai:update": "node packages/ai-resume/dist/cli.js --jd JD.txt --resume sample_resume_text.txt --out output",
    "web:dev": "npm run ai:build && npm --workspace @resume/web run dev",
    "web:build": "npm run ai:build && npm --workspace @resume/web run build"
  },
  "bin": {},
  "keywords": [
    "resume",
    "ats",
    "job-description",
    "cv",
    "generator",
    "web-ui"
  ],
  "author": "",
  "license": "ISC",
  "description": "Transform job descriptions into ATS-friendly resumes with CLI and Web UI",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "mammoth": "^1.10.0",
    "multiparty": "^4.2.3",
    "pdf-parse": "^1.1.1",
    "pdfmake": "^0.2.20",
    "yargs": "^17.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@vercel/node": "^3.0.0",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
